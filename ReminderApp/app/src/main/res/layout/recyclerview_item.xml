<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/cardView1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/recycleview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sarabun_semibold"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycleview_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="TextView"
            app:layout_constraintEnd_toStartOf="@+id/recycleview_endTime"
            app:layout_constraintStart_toEndOf="@+id/recycleview_date"
            app:layout_constraintTop_toBottomOf="@+id/recycleview_title" />

        <TextView
            android:id="@+id/recycleview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sarabun_semibold"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/recycleview_startTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recycleview_startTime" />

        <TextView
            android:id="@+id/recycleview_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/recycleview_startTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/recycleview_startTime" />

        <TextView
            android:id="@+id/recycleview_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycleview_startTime" />

        <Button
            android:id="@+id/reminder"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="Set tIMER"
            android:fontFamily="@font/sarabun_semibold"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:backgroundTint="#D37506"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/setAlarm"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycleview_note" />

        <Button
            android:id="@+id/setAlarm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="SET ALARM"
            android:fontFamily="@font/sarabun_semibold"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:backgroundTint="#D37506"
            app:layout_constraintBottom_toBottomOf="@+id/reminder"
            app:layout_constraintEnd_toStartOf="@+id/removeAlarm"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/reminder"
            app:layout_constraintTop_toTopOf="@+id/reminder" />

        <Button
            android:id="@+id/removeAlarm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="CANCEL"
            android:fontFamily="@font/sarabun_semibold"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:backgroundTint="#A30000"
            app:layout_constraintBottom_toBottomOf="@+id/setAlarm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/setAlarm"
            app:layout_constraintTop_toTopOf="@+id/setAlarm" />


